# ─── App ───────────────────────────────────────────────────────────────────────
SECRET_KEY=change-me-generate-with-openssl-rand-hex-32
ENVIRONMENT=development
DEBUG=true

# ─── Database ──────────────────────────────────────────────────────────────────
# For bare-metal local dev: use your postgres superuser credentials
# The two databases (trigradar, trigradar_dw) must be created manually:
#   psql -U postgres -c "CREATE DATABASE trigradar;"
#   psql -U postgres -c "CREATE DATABASE trigradar_dw;"
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-local-postgres-password
DATABASE_URL=postgresql+asyncpg://postgres:your-local-postgres-password@localhost:5432/trigradar
WAREHOUSE_URL=postgresql+asyncpg://postgres:your-local-postgres-password@localhost:5432/trigradar_dw

# ─── Redis ─────────────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ─── External APIs ─────────────────────────────────────────────────────────────
# Amadeus Self-Service (replaces Kiwi Tequila)
# Signup: https://developers.amadeus.com → create app → copy Client ID + Secret
# AMADEUS_ENV=test for unlimited sandbox; switch to production when ready
AMADEUS_CLIENT_ID=your-amadeus-client-id
AMADEUS_CLIENT_SECRET=your-amadeus-client-secret
AMADEUS_ENV=test
OPENWEATHER_API_KEY=your-openweather-api-key
HOSTELWORLD_API_KEY=your-hostelworld-api-key

# ─── Firebase (FCM push notifications) ────────────────────────────────────────
FIREBASE_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# ─── Email (Resend) ────────────────────────────────────────────────────────────
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=alertes@trigradar.fr

# ─── Internal ─────────────────────────────────────────────────────────────────
INTERNAL_API_TOKEN=change-me-random-secret-for-airflow-calls

# ─── Airflow ───────────────────────────────────────────────────────────────────
AIRFLOW_BASE_URL=http://localhost:8080
AIRFLOW_USER=admin
AIRFLOW_PASS=admin
AIRFLOW__CORE__FERNET_KEY=change-me-generate-with-python-cryptography

# ─── Next.js (public — exposed to browser) ─────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com

# ─── Celery ────────────────────────────────────────────────────────────────────
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ─── Monitoring ────────────────────────────────────────────────────────────────
SENTRY_DSN=https://your-key@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-key@sentry.io/project-id
